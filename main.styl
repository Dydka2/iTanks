html, body
  margin: 0
  padding: 0
  font-size: 16px
  font-family: Arial, sans-serif

.loader
  position: absolute
  top: 0
  right: 0
  bottom: 0
  left: 0
  background: rgba(0, 0, 0, .3)

  .loader-inner
    display: none
    height: 34px
    width: 34px
    position: absolute
    left: 50%
    top: 50%
    margin-left: -17px
    margin-top: -17px
    background: url('images/loader.png') no-repeat
    -webkit-animation: rotation 1s infinite 0s
    animation: rotation 1s infinite 0s


.g-hidden
  display: none

.tank-type-label
  display: block


.b-game
  overflow: hidden

  canvas
    position: absolute
    left: 0
    top: 0

  &__area
    float: left

  .b-info
    float: left



.player-list-item

  .player-name
    display: inline-block
    width: 150px

  .player-color
    display: inline-block
    width: 32px
    height: 32px
    margin-right: 10px

  .player-name, .player-kills .value, .player-deaths .value
    vertical-align: top
    line-height: 32px


  .icon
    background-repeat: no-repeat
    background-size: contain
    width: 32px
    height: 32px
    margin: 0 0px 0 10px
    display: inline-block

  .value
    font-size: 80%
    margin-left: -2px

  .player-kills
    .icon
      background-image: url('images/kill.png')

  .player-deaths
    .icon
      background-image: url('images/death.png')


.login-form
  width: 300px
  margin: 30px auto 0
  padding: 10px
  background: #EFF0F2
  border-radius: 10px

.smbt-btn
  padding: 10px
  margin: 0 auto
  display: block
  border: 0
  border-radius: 10px
  background: #1ABC9C
  color:#fff
  margin-top:10px
  width: 100px
  cursor: pointer

.b-auth
  h2
    text-align: center
    color: #1ABC9C

.login-input
  border: 2px solid #1ABC9C
  margin: 0
  width: 150px
  padding: 5px
  border-radius: 5px
  margin-left: 10px
  outline: none

  &.error
   border-color: #f00

.b-tank-types
  margin-top: 10px

.b-tank-types__elems
  overflow: hidden
  margin-bottom: 30px

  label
    float: left
    margin-right: 10px

.b-lives
  padding: 10px

  .yes
    path
      fill: #f00