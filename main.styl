.login-form
  width: 300px
  margin: 30px auto 0
  padding: 10px
  background: #EFF0F2
  border-radius: 10px

.smbt-btn
  padding: 10px
  margin: 0 auto
  display: block
  border: 0
  border-radius: 10px
  background: #1ABC9C
  color:#fff
  margin-top:10px
